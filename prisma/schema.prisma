// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider  = "postgresql"
    url       = env("DATABASE_URL")
    directUrl = env("DIRECT_URL")
}

model Post {
    id        Int      @id @default(autoincrement())
    name      String
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    @@index([name])
}

model AuthChallenge {
    id            Int      @id @default(autoincrement())
    challenge     String   @unique
    message       String
    walletAddress String
    expiresAt     DateTime
    createdAt     DateTime @default(now())

    @@index([walletAddress])
    @@index([expiresAt])
}

model User {
    id            Int      @id @default(autoincrement())
    walletAddress String   @unique
    createdAt     DateTime @default(now())
    updatedAt     DateTime @updatedAt

    transactions Transaction[]
    quota        Quota?

    @@index([walletAddress])
}

model Subsidy {
    id              Int    @id @default(autoincrement())
    name            String
    maxAmount       BigInt
    maxTransactions Int
    totalBudget     BigInt
    usedBudget      BigInt @default(0)

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}

model Transaction {
    id        Int     @id @default(autoincrement())
    userId    Int
    user      User    @relation(fields: [userId], references: [id])
    amount    BigInt
    subsidyId Int?
    status    String
    txHash    String?

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}

model Quota {
    id        Int      @id @default(autoincrement())
    userId    Int      @unique
    user      User     @relation(fields: [userId], references: [id])
    usedCount Int      @default(0)
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}
